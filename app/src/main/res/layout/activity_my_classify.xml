<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_my_classify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.food.MyClassify"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/classify_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffff"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:title="原味坊（玫瑰园店）"
            android:titleTextColor="#000000"
            android:fitsSystemWindows="true"
            android:paddingTop="5dp"
            android:backgroundTint="@color/cardview_shadow_start_color"></android.support.v7.widget.Toolbar>

        <!--<Toolbar-->
            <!--android:id="@+id/classify_toolbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:title="正新鸡扒"-->
            <!--android:titleTextColor="#000000"-->
            <!--android:fitsSystemWindows="true"-->
            <!--android:popupTheme="@style/ThemeOverlay.AppCompat.Light">-->
            <!--</Toolbar>-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:hint="请输入商家或商品名称" />
    </android.support.design.widget.AppBarLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/classify_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
